{
  "name": "dxp-component-library",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run cmp\" \"sleep 2 && node server\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest",
    "build:server": "vite build --ssr src/entry-server.js",
    "cmp": "dxp-next cmp dev-ui ./dxp/component-service",
    "test": "vitest --coverage",
    "lint:css": "stylelint \"**/*.scss\"",
    "lint:css:fix": "stylelint \"**/*.scss\" --fix",
    "prettier": "npx prettier .",
    "prettier:fix": "npx prettier . --write",
    "deploy": "npm run deploy:component --",
    "deploy:component": "FEATURE_EDGE_COMPONENTS=true dxp-next cmp deploy ./dxp/component-service/$npm_config_name",
    "vermgmt": "vermgmt",
    "lint:js": "eslint dxp/component-service src/scripts",
    "lint:js:fix": "eslint dxp/component-service src/scripts --fix",
    "fix:all": "npm run lint:css:fix && npm run lint:js:fix && npm run prettier:fix"
  },
  "devDependencies": {
    "@squiz/component-lib": "^1.84.1",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "compression": "^1.8.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.4",
    "kill-port": "^2.0.1",
    "sass": "^1.97.2",
    "sirv": "^3.0.2",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "vite": "^7.3.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-sass-glob-import": "^6.0.2",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@squiz/vermgmt": "^2.0.1",
    "node-html-parser": "^7.0.2",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "vite-plugin-static-copy": "^3.1.5",
    "xss": "^1.0.15"
  },
  "overrides": {
    "axios": "^1.8.2"
  }
}
